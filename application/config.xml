<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.ionicframework.application813574" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>application</name>
  <description>
        An Ionic Framework and Cordova project.
    </description>
  <author email="hi@ionicframework" href="http://ionicframework.com/">
      Ionic Framework Team
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="AutoHideSplashScreen" value="false" />

  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>

  <feature name="InAppBrowser">
    <param name="ios-package" value="CDVInAppBrowser" />
    <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
  </feature>

  <feature name="Geolocation">
    <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
    <param name="ios-package" value="CDVLocation" />
  </feature>

  <platform name="ios">
    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="img/ios/icon-60@3x.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="img/ios/icon-60.png" width="60" height="60" />
    <icon src="img/ios/icon-60@2x.png" width="120" height="120" />
    <!-- iPhone / iPod Touch -->
    <icon src="img/ios/icon.png" width="57" height="57" />
    <icon src="img/ios/icon@2x.png" width="114" height="114" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="img/ios/icon-small.png" width="29" height="29" />
    <icon src="img/ios/icon-small@2x.png" width="58" height="58" />

    <!-- images are determined by width and height. The following are supported -->
    <splash src="img/ios/Default~iphone.png" width="320" height="480"/>
    <splash src="img/ios/Default@2x~iphone.png" width="640" height="960"/>
    <splash src="img/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
    <splash src="img/ios/Default-667h.png" width="750" height="1334"/>
    <splash src="img/ios/Default-736h.png" width="1242" height="2208"/>
    <splash src="img/ios/Default-Landscape-736h.png" width="2208" height="1242"/>
  </platform>

  <platform name="android">
    <!-- app icons -->
    <icon src="res/android/ldpi.png" density="ldpi" />
    <icon src="res/android/mdpi.png" density="mdpi" />
    <icon src="res/android/hdpi.png" density="hdpi" />
    <icon src="res/android/xhdpi.png" density="xhdpi" />

    <!-- you can use any density that exists in the Android project -->
    <splash src="img/android/splash-land-hdpi.png" density="land-hdpi"/>
    <splash src="img/android/splash-land-ldpi.png" density="land-ldpi"/>
    <splash src="img/android/splash-land-mdpi.png" density="land-mdpi"/>
    <splash src="img/android/splash-land-xhdpi.png" density="land-xhdpi"/>

    <splash src="img/android/splash-port-hdpi.png" density="port-hdpi"/>
    <splash src="img/android/splash-port-ldpi.png" density="port-ldpi"/>
    <splash src="img/android/splash-port-mdpi.png" density="port-mdpi"/>
    <splash src="img/android/splash-port-xhdpi.png" density="port-xhdpi"/>
  </platform>
</widget>
